{
    "compilerOptions": {
        "target": "ES2016",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "strictPropertyInitialization": false,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ],
        "lib": [
            "ES6",
            "DOM"
        ]
    },
    "include": [
        "src/**/*.ts",
        "api/index.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "certs",
        "docker",
        "drizzle",
        "logs",
        "scripts"
    ]
}